{
  "productName": "QTunnel",
  "version": "0.1.0",
  "identifier": "com.qtunnel.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "QTunnel",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: asset: https://asset.localhost; connect-src ipc: http://ipc.localhost https://api.cloudflare.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"]
  }
}
